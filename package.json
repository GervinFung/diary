{
    "private": true,
    "scripts": {
        "dev": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "mix --production",
        "start": "concurrently \"php artisan server\" \"yarn watch\"",
        "format": "yarn prettier --write resources/**/*.blade.php resources/**/**/*.blade.php resources/css/*.css resources/scss/*.scss",
        "seed": "php artisan db:seed",
        "migrate": "php artisan migrate",
        "unix-kill-php": "bash && kill $(ps aux | grep '[p]hp' | awk '{print $2}') && exit"
    },
    "devDependencies": {
        "@prettier/plugin-php": "^0.18.3",
        "@shufo/prettier-plugin-blade": "^1.2.2",
        "axios": "^0.21",
        "concurrently": "^7.0.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "prettier": "^2.6.1"
    }
}
